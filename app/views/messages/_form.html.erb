<div class="form-horizontal">
<%= form_for(Message.new, html: {class: 'form-horizontal'}) do |f| %>
  <div class="field form-group">
	  <p><%= f.label :subject, class: 'col-sm-2 control-label' %></p>
	  <div class="col-sm-10">
	  <p><%= f.text_field :subject, class: 'form-control' %></p>
	  </div>
  </div>
  <div class="field form-group">
  <p><%= f.label :content, class: 'col-sm-2 control-label' %></p>
  <div class="col-sm-10">
  <p><%= f.text_area :content, class: 'form-control' %></p>
  </div>
  </div>
  <div class="actions form-group">
    <div class="col-sm-offset-2 col-sm-10"> 
  <p><%= f.submit 'Send Message' %> </p>
   </div>
  </div>
  </br>
<% end %>
</div>